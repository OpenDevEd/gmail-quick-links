{
  "manifest_version": 2,
  "name": "Gmail Quick Links",
  "version": "0.1.1",
  "description": "a replacement for Gmail Quick Links",
  "short_name": "Gmail Links",
  "icons": {
    "16": "./assets/icon16.png",
    "48": "./assets/icon48.png",
    "128": "./assets/icon48.png"
  },

  "author": "Kevin Wu <kevin.wu@gmail.com>",
  "homepage_url": "https://github.com/kevinwucodes/gmail-quick-links",

  "key": "",

  "oauth2": {
    "client_id": "971576073269-4rcq28s9ot2ecku2a7q35kgop4bfrcbl.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/oauth2/v3/userinfo"
    ]
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
     {
       "matches": ["https://mail.google.com/*"],
       "js": ["dev.gmailquicklinks.bundle.js"],
       "run_at": "document_idle"
     }
   ],

   "permissions": [
     "identity",
     "identity.email",
     "storage"
   ]
}
